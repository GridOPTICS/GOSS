		<module>goss-tool-pmuevents-feature</module>
		<module>goss-demo-feature</module>
		<module>goss-server</module>
	</modules>
	<scm>
		<developerConnection>scm:git:https://git.pnnl.gov/GOSS/</developerConnection>
	</scm>
	<distributionManagement>
		<repository>
			<id>mvn-pnnl-releases</id>
			<name>PNNL Release Repository</name>
			<url>http://maven.pnnl.gov/artifactory/mvn-pnnl-releases</url>
		</repository>
		<snapshotRepository>
			<id>mvn-pnnl-snapshots</id>
			<name>PNNL Snapshot Repository</name>
			<url>http://maven.pnnl.gov/artifactory/mvn-pnnl-snapshots</url>
		</snapshotRepository>
	</distributionManagement>
	<profiles>
		<profile>
			<id>local-devdeveloper</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<global.properties.path>${user.home}/.goss/goss.properties</global.properties.path>
			</properties>			
		</profile>
		<profile>
			<id>eioc-north</id>
			<activation>
				<property>
					<name>env</name>
					<value>eioc-north</value>
				</property>				
			</activation>
			<properties>
				<global.properties.path>${user.home}/.goss/goss.north.properties</global.properties.path>
			</properties>
		</profile>
		<profile>
			<id>eioc-south</id>
			<activation>
				<property>
					<name>env</name>
					<value>eioc-south</value>
				</property>				
			</activation>
			<properties>
				<global.properties.path>${user.home}/.goss/goss.south.properties</global.properties.path>
			</properties>
		</profile>
	</profiles>

