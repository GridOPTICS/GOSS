		<goss-fusion.version>0.1.3-SNAPSHOT</goss-fusion.version>
		<goss-gridmw.version>0.1.3-SNAPSHOT</goss-gridmw.version>
		<goss-gridpack.version>0.1.3-SNAPSHOT</goss-gridpack.version>
		<goss-kariosdb.version>0.1.3-SNAPSHOT</goss-kariosdb.version>
		<goss-mdart.version>0.1.3-SNAPSHOT</goss-mdart.version>
