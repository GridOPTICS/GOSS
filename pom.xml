	<modules>
		<module>goss-core-feature</module>
		<module>goss-powergrid-feature</module>
		<module>goss-gridmw-feature</module>
		<module>goss-tool-gridpack-feature</module>
		<module>goss-tool-fncs-feature</module>

		<module>goss-tool-sharedperspective-feature</module>
		<module>goss-kairosdb-feature</module>
		<!--<module>goss-hpc-server</module> -->
