	<modelVersion>4.0.0</modelVersion>

	<groupId>pnnl.goss</groupId>
	<artifactId>goss-tool-fncs-server</artifactId>
	<packaging>bundle</packaging>

	<name>GOSS fncs Server Bundle</name>
	<description>
    	GOSS fncs Server Bundle
	</description>

	<parent>
		<groupId>pnnl.goss</groupId>
		<artifactId>goss-tool-fncs-feature</artifactId>
		<version>0.1.2-SNAPSHOT</version>
	</parent>

